        <item name="android:windowDisablePreview">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- some other theme configurations for actionbar, overflow menu etc. -->

        <item name="themedWeatherTemperature">@drawable/ic_temperature</item>
        <item name="themedWeatherHumidity">@drawable/ic_humidity</item>
        <item name="themedWeatherPressure">@drawable/ic_pressure</item>
