<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/tools"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:animateLayoutChanges="true"
              android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_answer_raw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="7dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="10dp"
        android:animateLayoutChanges="true"
        android:visibility="visible"
        app:cardCornerRadius="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp">

            <TextView
                android:id="@+id/txt_view_answer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_margin="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_toStartOf="@+id/img_view_drag"
                android:text="Answer"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

            <TextView
                android:id="@+id/txt_view_priority"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/txt_view_answer_name"
                android:layout_below="@+id/txt_view_answer_name"
                android:layout_margin="5dp"
                android:layout_marginTop="10dp"
                android:layout_toStartOf="@+id/img_view_drag"
                android:text="priority"
                android:textAppearance="?android:attr/textAppearanceSmall"/>

            <ImageView
                android:id="@+id/img_view_drag"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignBottom="@+id/txt_view_priority"
                android:layout_alignParentEnd="true"
                android:layout_margin="5dp"
                android:layout_marginEnd="10dp"
                android:contentDescription="drag handler"
                android:src="@drawable/ic_reorder_grey_500_24dp"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>